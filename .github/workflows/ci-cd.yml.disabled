# jobs:
  # ========================================
  # ANÃLISE DE CÃ“DIGO E QUALIDADE
  # ========================================
  code-quality:
    name: ğŸ” AnÃ¡lise de Qualidade
    runs-on: ubuntu-latest
    steps:
      - name: ğŸ“¥ Checkout cÃ³digo
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
      
      - name: ğŸŸ¢ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      - name: ğŸ“¦ Instalar dependÃªncias
        run: npm ci
      
      - name: ğŸ” ESLint - AnÃ¡lise de cÃ³digo JavaScript
        run: npx eslint assets/js/ --ext .js --format json --output-file eslint-report.json || true
      
      - name: ğŸ¨ Stylelint - AnÃ¡lise de CSS
        run: npx stylelint assets/css/ --format json --output-file stylelint-report.json || true
      
      - name: ğŸ“Š HTMLHint - AnÃ¡lise de HTML
        run: npx htmlhint index.html --format json --output-file htmlhint-report.json || true
      
      - name: ğŸ“ˆ Upload relatÃ³rios de qualidade
        uses: actions/upload-artifact@v4
        with:
          name: code-quality-reports
          path: |
            eslint-report.json
            stylelint-report.json
            htmlhint-report.json

  # ========================================
  # TESTES AUTOMATIZADOS
  # ========================================
  tests:
    name: ğŸ§ª Testes Automatizados
    runs-on: ubuntu-latest
    needs: code-quality
    strategy:
      matrix:
        browser: [chromium, firefox, webkit]
    steps:
      - name: ğŸ“¥ Checkout cÃ³digo
        uses: actions/checkout@v4
      
      - name: ğŸŸ¢ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      - name: ğŸ“¦ Instalar dependÃªncias
        run: npm ci
      
      - name: ğŸ§ª Instalar Playwright
        run: npx playwright install --with-deps ${{ matrix.browser }}
      
      - name: ğŸš€ Iniciar servidor local
        run: |
          python3 -m http.server 8000 &
          sleep 5
      
      - name: ğŸ§ª Executar testes de acessibilidade
        run: npx playwright test tests/accessibility.test.js --project=${{ matrix.browser }}
      
      - name: ğŸ§ª Executar testes de performance
        run: npx playwright test tests/performance.test.js --project=${{ matrix.browser }}
      
      - name: ğŸ§ª Executar testes de funcionalidade
        run: npx playwright test tests/functionality.test.js --project=${{ matrix.browser }}
      
      - name: ğŸ“Š Upload relatÃ³rios de teste
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: test-reports-${{ matrix.browser }}
          path: |
            test-results/
            playwright-report/

  # ========================================
  # TESTES DE SEGURANÃ‡A
  # ========================================
  security:
    name: ğŸ”’ Testes de SeguranÃ§a
    runs-on: ubuntu-latest
    steps:
      - name: ğŸ“¥ Checkout cÃ³digo
        uses: actions/checkout@v4
      
      - name: ğŸŸ¢ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      - name: ğŸ“¦ Instalar dependÃªncias
        run: npm ci
      
      - name: ğŸ” Audit de vulnerabilidades NPM
        run: npm audit --audit-level=moderate
      
      - name: ğŸ›¡ï¸ Snyk - AnÃ¡lise de vulnerabilidades
        uses: snyk/actions/node@master
        env:
          SNYK_TOKEN: ${{ secrets.SNYK_TOKEN }}
        with:
          args: --severity-threshold=high
      
      - name: ğŸ”’ Semgrep - AnÃ¡lise de seguranÃ§a
        uses: returntocorp/semgrep-action@v1
        with:
          config: >-
            p/security-audit
            p/secrets
            p/owasp-top-ten
      
      - name: ğŸŒ Lighthouse CI - Auditoria de seguranÃ§a
        run: |
          npm install -g @lhci/cli@0.12.x
          lhci autorun --upload.target=temporary-public-storage

  # ========================================
  # TESTES DE PERFORMANCE
  # ========================================
  performance:
    name: âš¡ Testes de Performance
    runs-on: ubuntu-latest
    needs: tests
    steps:
      - name: ğŸ“¥ Checkout cÃ³digo
        uses: actions/checkout@v4
      
      - name: ğŸŸ¢ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      - name: ğŸ“¦ Instalar dependÃªncias
        run: npm ci
      
      - name: ğŸš€ Iniciar servidor local
        run: |
          python3 -m http.server 8000 &
          sleep 5
      
      - name: âš¡ Lighthouse CI - Auditoria de performance
        run: |
          npm install -g @lhci/cli@0.12.x
          lhci autorun --upload.target=temporary-public-storage
        env:
          LHCI_GITHUB_APP_TOKEN: ${{ secrets.LHCI_GITHUB_APP_TOKEN }}
      
      - name: ğŸ“Š WebPageTest - Teste de performance
        run: |
          curl -X POST "https://www.webpagetest.org/runtest.php" \
            -d "url=http://localhost:8000" \
            -d "key=${{ secrets.WEBPAGETEST_API_KEY }}" \
            -d "runs=3" \
            -d "f=json" \
            -d "video=1" \
            -d "private=1"

  # ========================================
  # TESTES DE ACESSIBILIDADE
  # ========================================
  accessibility:
    name: â™¿ Testes de Acessibilidade
    runs-on: ubuntu-latest
    needs: tests
    steps:
      - name: ğŸ“¥ Checkout cÃ³digo
        uses: actions/checkout@v4
      
      - name: ğŸŸ¢ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      - name: ğŸ“¦ Instalar dependÃªncias
        run: npm ci
      
      - name: ğŸ§ª Instalar Playwright
        run: npx playwright install --with-deps chromium
      
      - name: ğŸš€ Iniciar servidor local
        run: |
          python3 -m http.server 8000 &
          sleep 5
      
      - name: â™¿ axe-core - Auditoria de acessibilidade
        run: npx playwright test tests/accessibility.test.js --project=chromium
      
      - name: ğŸ“Š Pa11y - Teste de acessibilidade
        run: |
          npm install -g pa11y-ci
          pa11y-ci --sitemap http://localhost:8000/sitemap.xml
      
      - name: ğŸ“ˆ Upload relatÃ³rios de acessibilidade
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: accessibility-reports
          path: |
            test-results/
            pa11y-reports/

  # ========================================
  # BUILD E OTIMIZAÃ‡ÃƒO
  # ========================================
  build:
    name: ğŸ—ï¸ Build e OtimizaÃ§Ã£o
    runs-on: ubuntu-latest
    needs: [tests, security, performance, accessibility]
    steps:
      - name: ğŸ“¥ Checkout cÃ³digo
        uses: actions/checkout@v4
      
      - name: ğŸŸ¢ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
      
      - name: ğŸ“¦ Instalar dependÃªncias
        run: npm ci
      
      - name: ğŸ–¼ï¸ Otimizar imagens
        run: |
          npm install -g imagemin-cli imagemin-webp imagemin-avif
          imagemin assets/images/*.{jpg,png} --out-dir=dist/images --plugin=webp
          imagemin assets/images/*.{jpg,png} --out-dir=dist/images --plugin=avif
      
      - name: ğŸ¨ Minificar CSS
        run: |
          npm install -g clean-css-cli
          cleancss -o dist/css/main.min.css assets/css/main.css
          cleancss -o dist/css/design-system.min.css assets/css/design-system.css
      
      - name: ğŸ“œ Minificar JavaScript
        run: |
          npm install -g terser
          terser assets/js/main.js -o dist/js/main.min.js -c -m
          terser assets/js/image-optimizer.js -o dist/js/image-optimizer.min.js -c -m
          terser assets/js/accessibility-manager.js -o dist/js/accessibility-manager.min.js -c -m
          terser assets/js/performance-monitor.js -o dist/js/performance-monitor.min.js -c -m
      
      - name: ğŸ“„ Minificar HTML
        run: |
          npm install -g html-minifier-terser
          html-minifier-terser index.html -o dist/index.html \
            --remove-comments \
            --remove-redundant-attributes \
            --remove-script-type-attributes \
            --remove-style-link-type-attributes \
            --use-short-doctype \
            --minify-css \
            --minify-js
      
      - name: ğŸ“Š Gerar sitemap
        run: |
          echo '<?xml version="1.0" encoding="UTF-8"?>' > dist/sitemap.xml
          echo '<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">' >> dist/sitemap.xml
          echo '  <url>' >> dist/sitemap.xml
          echo '    <loc>https://fitlog.com.br/</loc>' >> dist/sitemap.xml
          echo '    <lastmod>$(date -u +%Y-%m-%dT%H:%M:%S+00:00)</lastmod>' >> dist/sitemap.xml
          echo '    <changefreq>weekly</changefreq>' >> dist/sitemap.xml
          echo '    <priority>1.0</priority>' >> dist/sitemap.xml
          echo '  </url>' >> dist/sitemap.xml
          echo '</urlset>' >> dist/sitemap.xml
      
      - name: ğŸ“ˆ Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: build-artifacts
          path: dist/

  # ========================================
  # DEPLOY PARA STAGING
  # ========================================
  deploy-staging:
    name: ğŸš€ Deploy Staging
    runs-on: ubuntu-latest
    needs: build
    if: github.ref == 'refs/heads/develop'
    environment: staging
    steps:
      - name: ğŸ“¥ Download build artifacts
        uses: actions/download-artifact@v4
        with:
          name: build-artifacts
          path: dist/
      
      - name: ğŸš€ Deploy para Netlify Staging
        uses: nwtgck/actions-netlify@v2.0
        with:
          publish-dir: './dist'
          production-deploy: false
          github-token: ${{ secrets.GITHUB_TOKEN }}
          deploy-message: "Deploy automÃ¡tico - Staging - ${{ github.sha }}"
        env:
          NETLIFY_AUTH_TOKEN: ${{ secrets.NETLIFY_AUTH_TOKEN }}
          NETLIFY_SITE_ID: ${{ secrets.NETLIFY_SITE_ID_STAGING }}

  # ========================================
  # DEPLOY PARA PRODUÃ‡ÃƒO
  # ========================================
  deploy-production:
    name: ğŸŒŸ Deploy ProduÃ§Ã£o
    runs-on: ubuntu-latest
    needs: build
    if: github.ref == 'refs/heads/main'
    environment: production
    steps:
      - name: ğŸ“¥ Download build artifacts
        uses: actions/download-artifact@v4
        with:
          name: build-artifacts
          path: dist/
      
      - name: ğŸš€ Deploy para Netlify ProduÃ§Ã£o
        uses: nwtgck/actions-netlify@v2.0
        with:
          publish-dir: './dist'
          production-deploy: true
          github-token: ${{ secrets.GITHUB_TOKEN }}
          deploy-message: "Deploy automÃ¡tico - ProduÃ§Ã£o - ${{ github.sha }}"
        env:
          NETLIFY_AUTH_TOKEN: ${{ secrets.NETLIFY_AUTH_TOKEN }}
          NETLIFY_SITE_ID: ${{ secrets.NETLIFY_SITE_ID_PRODUCTION }}
      
      - name: ğŸ“§ Notificar deploy
        uses: 8398a7/action-slack@v3
        with:
          status: ${{ job.status }}
          channel: '#deployments'
          webhook_url: ${{ secrets.SLACK_WEBHOOK }}
        if: always()

  # ========================================
  # MONITORAMENTO PÃ“S-DEPLOY
  # ========================================
  post-deploy-monitoring:
    name: ğŸ“Š Monitoramento PÃ³s-Deploy
    runs-on: ubuntu-latest
    needs: [deploy-staging, deploy-production]
    if: always() && (needs.deploy-staging.result == 'success' || needs.deploy-production.result == 'success')
    steps:
      - name: ğŸš€ Iniciar monitoramento
        run: |
          echo "Iniciando monitoramento pÃ³s-deploy..."
          # Aqui vocÃª pode adicionar scripts de monitoramento
          # como verificaÃ§Ãµes de saÃºde, testes de smoke, etc.
      
      - name: ğŸ“ˆ Lighthouse CI - VerificaÃ§Ã£o pÃ³s-deploy
        run: |
          npm install -g @lhci/cli@0.12.x
          lhci autorun --upload.target=temporary-public-storage
        env:
          LHCI_GITHUB_APP_TOKEN: ${{ secrets.LHCI_GITHUB_APP_TOKEN }}

  # ========================================
  # NOTIFICAÃ‡Ã•ES
  # ========================================
  notify:
    name: ğŸ“¢ NotificaÃ§Ãµes
    runs-on: ubuntu-latest
    needs: [code-quality, tests, security, performance, accessibility, build]
    if: always()
    steps:
      - name: ğŸ“§ Notificar resultado do pipeline
        uses: 8398a7/action-slack@v3
        with:
          status: ${{ job.status }}
          channel: '#ci-cd'
          webhook_url: ${{ secrets.SLACK_WEBHOOK }}
          fields: repo,message,commit,author,action,eventName,ref,workflow